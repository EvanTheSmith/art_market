<ul>
 <li> Name: <%= @penpal.name %> </li>
 <li> Age: <%= @penpal.age %> </li>
 <li> Frequency: <%= @penpal.frequency %> </li>
 <li> <%= "Interest".pluralize(@penpal.interests.count) %>: <%= @penpal.interests.collect { |interest| interest.name }.join(", ") %> </li>
 <% if !@letters.empty? %>
 <li> <%= link_to "Letters with #{@penpal.first_name}", penpal_letters_url(@penpal) %> </li>
 <% end %>
 <li><%= link_to "Send Letter to #{@penpal.first_name}", new_penpal_letter_url(@penpal) %> </li>
</ul>